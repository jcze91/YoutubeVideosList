<android.support.v7.widget.CardView
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/card_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/background_light"
  android:focusable="true"
  android:clickable="true"
  android:foreground="?android:attr/selectableItemBackground"
  card_view:cardCornerRadius="2dp"
  android:layout_marginTop="8dp"
  android:layout_marginBottom="0dp"
  android:layout_marginLeft="8dp"
  android:layout_marginRight="8dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/videoThumbnail"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:scaleType="centerCrop"
      android:src="@drawable/thumbnail_placeholder"/>

    <TextView
      android:id="@+id/videoTitle"
      android:background="#4D000000"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Title"
      android:gravity="center_vertical"
      android:layout_alignBottom="@+id/videoThumbnail"
      android:textSize="24sp"
      android:textColor="@color/grey_white_1000"
      android:paddingTop="16dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingBottom="12dp"/>

    <TextView
      android:id="@+id/channelTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Channel"
      android:gravity="center_vertical"
      android:textSize="14sp"
      android:layout_below="@id/videoThumbnail"
      android:layout_margin="16dp"/>

    <View
      android:id="@+id/actionsDivider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/grey_200"
      android:layout_below="@id/channelTitle"/>

    <TextView
      android:id="@+id/shareAction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_share"
      android:textAllCaps="true"
      android:fontFamily="sans-serif"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textSize="14sp"
      android:layout_below="@id/actionsDivider"
      android:layout_margin="16dp"/>

    <TextView
      android:id="@+id/detailsAction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_details"
      android:textAllCaps="true"
      android:fontFamily="sans-serif"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textSize="14sp"
      android:textColor="@color/yellow_800"
      android:layout_below="@id/actionsDivider"
      android:layout_toRightOf="@id/shareAction"
      android:layout_toEndOf="@id/shareAction"
      android:layout_margin="16dp"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>